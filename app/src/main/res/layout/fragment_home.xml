<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.HomeFragment">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/home_first"
        android:layout_above="@+id/home_second"
        android:layout_width="match_parent"
        android:layout_height="250dp">
    <com.google.android.material.button.MaterialButton
        android:id="@+id/live_feed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/live_btn"
        android:fontFamily="@font/aladin"
        android:scaleType="centerCrop"
        android:text="Live Feed"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        android:elevation="5dp"
        />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/devices"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/devices_btn"
            android:fontFamily="@font/aladin"
            android:scaleType="centerCrop"
            android:text="Devices"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:backgroundTint="@null"
            android:elevation="5dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/home_second"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="250dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/arm_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/devices_btn"
        android:fontFamily="@font/aladin"
        android:scaleType="centerCrop"
        android:text="Devices"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        android:elevation="5dp"
        android:layout_weight="1"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/help_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/help_btn"
        android:fontFamily="@font/aladin"
        android:scaleType="centerCrop"
        android:text="Help"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        android:elevation="5dp"
        android:layout_weight="1"
        />
    </androidx.appcompat.widget.LinearLayoutCompat>

</RelativeLayout>