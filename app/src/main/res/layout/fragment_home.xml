<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentHome"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".Fragment.HomeFragment">

    <RelativeLayout
        android:id="@+id/home_about_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="15dp"
        android:background="@color/beige">
    <TextView
        android:id="@+id/home_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/aref_ruqaa"
        android:text="About Us"
        android:textAlignment="center"
        android:textColor="@color/dark"
        android:textSize="24sp" />

    <TextView
        android:layout_below="@id/home_about_us"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:text="We connect you to your camera from anywhere in the world. An immediate alert is sent if we detect suspicious behavior."/>

    </RelativeLayout>

    <TextView
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/home_about_layout"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/aref_ruqaa"
        android:text="Your IP Camera"
        android:textAlignment="center"
        android:textColor="@color/dark"
        android:textSize="24sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/home_ip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_title"
        android:layout_margin="15dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri"
            android:enabled="false"
            android:text="rtsp://168.12.5:8080/sp"
            android:textAlignment="center" />
    </com.google.android.material.textfield.TextInputLayout>

    <VideoView
        android:id="@+id/home_live"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:layout_below="@id/home_ip"/>
    <RelativeLayout
        android:layout_below="@id/home_live"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@color/black">
        <ImageButton
            android:id="@+id/play_btn"
            android:src="@drawable/play"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            android:tint="@color/white"
            android:focusableInTouchMode="true"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

        <ImageButton
            android:id="@+id/pause_btn"
            android:src="@drawable/pause"
            android:layout_centerHorizontal="true"
            android:background="@color/black"
            android:tint="@color/white"
            android:focusableInTouchMode="true"
            android:visibility="invisible"
            android:layout_width="45dp"
            android:layout_height="45dp"/>

        <ImageButton
            android:id="@+id/fullscreen_btn"
            android:layout_alignParentEnd="true"
            android:src="@drawable/full_screen"
            android:background="@color/black"
            android:tint="@color/white"
            android:focusableInTouchMode="true"
            android:layout_width="45dp"
            android:layout_height="45dp"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/home_error"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_live"
        android:layout_marginTop="70dp"
        android:textColor="@color/red"
        android:textAlignment="center" />

</RelativeLayout>